<div id="<%= dom_id post %>" class="bg-white rounded-lg shadow-md p-6 mb-6 hover:shadow-lg transition duration-300">
  <div class="border-l-4 border-indigo-500 pl-4 mb-4">
    <h2 class="text-2xl font-bold text-gray-800 mb-1"><%= post.title %></h2>
    <p class="text-sm text-gray-500 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      <%= post.user_id %>
    </p>
  </div>

  <div class="prose prose-indigo max-w-none text-gray-700 mb-4"> <!-- Container do conteÃºdo do post -->
    <%= post.content.body.to_s.html_safe %>
  </div>


  <div class="flex justify-end space-x-2 pt-3 border-t border-gray-100">
    <%= link_to "Visualizar", post, class: "inline-flex items-center px-4 py-2 bg-indigo-50 text-indigo-700 rounded-md text-sm font-medium hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    
    <%= link_to "Editar", edit_post_path(post), class: "inline-flex items-center px-4 py-2 bg-gray-50 text-gray-700 rounded-md text-sm font-medium hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
    
    <%= link_to "Excluir", post, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "inline-flex items-center px-4 py-2 bg-red-50 text-red-700 rounded-md text-sm font-medium hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>
</div>
