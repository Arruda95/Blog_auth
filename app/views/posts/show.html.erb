<% content_for :title, @post.title %>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @post.title %></h1>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">Publicado por <%= @post.user.email %> em <%= l @post.created_at, format: :long %></p>
  </div>
  
  <% if @post.image.attached? %>
    <div class="border-t border-gray-200">
      <%= image_tag @post.image.variant(resize_to_limit: [800, 400]), class: "w-full h-auto" %>
    </div>
  <% end %>
  
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <div class="prose max-w-none trix-content">
      <%= @post.content %>
    </div>
  </div>
  
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Comentários</h2>
    
    <div class="space-y-4 mb-6">
      <% @comments.each do |comment| %>
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="flex justify-between">
            <p class="font-medium"><%= comment.user.email %></p>
            <p class="text-sm text-gray-500"><%= l comment.created_at, format: :short %></p>
          </div>
          <p class="mt-1"><%= comment.content %></p>
          <% if comment.user == current_user %>
            <div class="mt-2 text-right">
              <%= link_to 'Excluir', [comment.post, comment], method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' }, class: "text-red-600 hover:text-red-900 text-sm" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="mt-4">
      <%= paginate @comments, class: "pagination" %>
    </div>
    
    <% if current_user %>
      <div class="mt-6 bg-white rounded-lg border border-gray-200 p-4">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Adicionar comentário</h3>
        <%= form_with(model: [@post, Comment.new]) do |form| %>
          <div class="mb-4">
            <%= form.label :content, "Seu comentário", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :content, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>
          <div>
            <%= form.submit "Comentar", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="mt-6 bg-gray-50 rounded-lg p-4 text-center">
        <p><%= link_to "Faça login", login_path, class: "text-indigo-600 hover:text-indigo-900" %> para comentar.</p>
      </div>
    <% end %>
  </div>
  
  <div class="border-t border-gray-200 px-4 py-4 sm:px-6">
    <%= link_to "Voltar para posts", posts_path, class: "text-indigo-600 hover:text-indigo-900" %>
    <% if @post.authored_by?(current_user) %>
      <span class="mx-2">|</span>
      <%= link_to "Editar post", edit_post_path(@post), class: "text-indigo-600 hover:text-indigo-900" %>
    <% end %>
  </div>
</div>