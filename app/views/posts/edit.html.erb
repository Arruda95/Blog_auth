<% content_for :title, "Editando post" %>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h1 class="text-2xl font-bold text-gray-900">Editando post</h1>
  </div>
  
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <%= render "form", post: @post %>
  </div>
  
  <div class="border-t border-gray-200 px-4 py-4 sm:px-6 flex space-x-4">
    <%= link_to "Ver post", @post, class: "text-indigo-600 hover:text-indigo-900" %>
    <%= link_to "Voltar para posts", posts_path, class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>
