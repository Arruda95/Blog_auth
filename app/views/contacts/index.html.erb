<% content_for :title, "Contato" %>

<div class="container mx-auto px-4 py-8"> <!-- Container principal com espaçamento responsivo -->
  <div class="mb-8 text-center">
    <h2 class="text-2xl md:text-3xl font-bold uppercase mb-2">ENTRE EM CONTATO</h2> <!-- Título da página com tamanho responsivo -->
    <div class="w-24 h-1 bg-gray-800 mx-auto"></div> <!-- Linha decorativa -->
    <p class="text-gray-600 mt-4 max-w-xl mx-auto">Envie-nos uma mensagem e responderemos o mais breve possível.</p> <!-- Descrição adicional -->
  </div>
  
  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg overflow-hidden"> <!-- Card do formulário com cantos arredondados -->
    <div class="md:flex"> <!-- Layout flexível para telas médias e grandes -->
      <div class="md:w-1/3 bg-gray-800 text-white p-6"> <!-- Barra lateral com informações de contato -->
        <h3 class="text-xl font-bold mb-4">INFORMAÇÕES</h3> <!-- Título da seção de informações -->
        <div class="space-y-4"> <!-- Espaçamento entre itens -->
          <div class="flex items-center"> <!-- Alinhamento de ícone e texto -->
            <span class="material-icons mr-2">location_on</span> <!-- Ícone de localização -->
            <p>Rua Exemplo, 123</p> <!-- Endereço -->
          </div>
          <div class="flex items-center"> <!-- Alinhamento de ícone e texto -->
            <span class="material-icons mr-2">phone</span> <!-- Ícone de telefone -->
            <p>(11) 1234-5678</p> <!-- Número de telefone -->
          </div>
          <div class="flex items-center"> <!-- Alinhamento de ícone e texto -->
            <span class="material-icons mr-2">email</span> <!-- Ícone de email -->
            <p>contato@blog.com</p> <!-- Endereço de email -->
          </div>
        </div>
      </div>
      
      <div class="md:w-2/3 p-6 md:p-8"> <!-- Formulário de contato -->
        <h3 class="text-xl font-bold mb-4">ENVIE SUA MENSAGEM</h3> <!-- Título do formulário -->
        <%= form_with(model: @contact, url: contact_path, method: :post, class: "space-y-4 md:space-y-5") do |form| %>
          <div> <!-- Campo de nome -->
            <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500" %>
          </div>
          
          <div> <!-- Campo de email -->
            <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
            <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500" %>
          </div>
          
          <div> <!-- Campo de assunto -->
            <%= form.label :subject, "Assunto", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :subject, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500" %>
          </div>
          
          <div> <!-- Campo de mensagem -->
            <%= form.label :message, "Mensagem", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :message, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500" %>
          </div>
          
          <div class="mt-6"> <!-- Container do botão -->
            <%= form.submit "Enviar Mensagem", class: "w-full sm:w-auto bg-gray-800 hover:bg-gray-900 text-white font-medium py-3 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>