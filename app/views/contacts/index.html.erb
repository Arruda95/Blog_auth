<% content_for :title, "Contato" %>

<div class="container mx-auto px-4 py-8"> <!-- Container principal com espaçamento responsivo -->
  <div class="mb-8 text-center">
    <h2 class="text-2xl md:text-3xl font-bold uppercase mb-2">ENTRE EM CONTATO</h2> <!-- Título da página com tamanho responsivo -->
    <div class="w-24 h-1 bg-gray-800 mx-auto"></div> <!-- Linha decorativa -->
    <p class="text-gray-600 mt-4 max-w-xl mx-auto">Envie-nos uma mensagem e responderemos o mais breve possível.</p> <!-- Descrição adicional -->
  
  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg overflow-hidden"> <!-- Card do formulário com cantos arredondados -->
    <div class="md:flex"> <!-- Layout flexível para telas médias e grandes -->
      <div class="md:w-1/3 bg-gray-800 text-white p-6"> <!-- Barra lateral com informações de contato -->
        <h3 class="text-xl font-bold mb-4">INFORMAÇÕES</h3> <!-- Título da seção de informações -->
        <div class="space-y-4"> <!-- Espaçamento entre itens -->
          <div class="flex items-center"> <!-- Alinhamento de ícone e texto -->
            <span class="material-icons mr-2">location_on</span> <!-- Ícone de localização -->
            <p>Rua Exemplo, 123</p> <!-- Endereço -->
          </div>
          <div class="flex items-center"> <!-- Alinhamento de ícone e texto -->
            <span class="material-icons mr-2">phone</span> <!-- Ícone de telefone -->
            <p>(11) 1234-5678</p> <!-- Número de telefone -->
          </div>
          <div class="flex items-center"> <!-- Alinhamento de ícone e texto -->
            <span class="material-icons mr-2">email</span> <!-- Ícone de email -->
            <p>contato@blog.com</p> <!-- Endereço de email -->
          </div>
        </div>
      </div>
      
      <div class="md:w-2/3 p-6 md:p-8"> <!-- Formulário de contato -->
        <h3 class="text-xl font-bold mb-4">ENVIE SUA MENSAGEM</h3> <!-- Título do formulário -->
        <form class="space-y-4 md:space-y-5"> <!-- Formulário com espaçamento entre campos, aumentado em telas médias -->
          <div> <!-- Campo de nome -->
            <label for="name" class="block text-sm font-medium text-gray-700">Nome</label> <!-- Rótulo do campo -->
            <input type="text" name="name" id="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500"> <!-- Campo de entrada -->
          </div>
          
          <div> <!-- Campo de email -->
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label> <!-- Rótulo do campo -->
            <input type="email" name="email" id="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500"> <!-- Campo de entrada -->
          </div>
          
          <div> <!-- Campo de assunto -->
            <label for="subject" class="block text-sm font-medium text-gray-700">Assunto</label> <!-- Rótulo do campo -->
            <input type="text" name="subject" id="subject" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500"> <!-- Campo de entrada -->
          </div>
          
          <div> <!-- Campo de mensagem -->
            <label for="message" class="block text-sm font-medium text-gray-700">Mensagem</label> <!-- Rótulo do campo -->
            <textarea name="message" id="message" rows="5" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500"></textarea> <!-- Área de texto -->
          </div>
      
      <div> <!-- Container do botão -->
        <button type="submit" class="w-full bg-gray-800 text-white px-6 py-3 text-sm uppercase font-medium hover:bg-gray-700 transition-colors duration-300 rounded">ENVIAR MENSAGEM</button> <!-- Botão de envio com efeito de transição -->
      </div>
    </form>
  </div>
    </div>
  </div>
</div>